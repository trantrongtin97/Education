<h1>=======================================================================</h1>

<h3>If and Else Conditions</h3>
@{
    int value = 200;
}

@if (value > 100)
{
    <p>Value is greater than 100</p>
}
else
{
    <p>Value is less than 100</p>
}
<h5>Or</h5>
@{
    var value2 = 300;
    if (value2 > 300)
    {
        <p>The value is greater than 300</p>
    }
    else
    {
        <p>This value is less than 300</p>
    }
}

<h3>If and Else Conditions</h3>
@{
    var value3 = 200;
}

@switch (value3)
{
    case 0:
        @: value is Zero
        break;
    case 100:
        <p>Value is 100 </p>
        break;
    case 200:
        <p>Value is @value </p>
        break;
    case 300:
        <text>Value is 300</text>
        break;
    default:
        <p>Invalid Value </p>
        break;
}

<h3>Loops</h3>
<h5>For loop</h5>
@for (int i = 0; i < 5; i++)
{
    <span> @i </span>
}
<h5>Foreach loop</h5>
@{
    var productList = new List<Product>()
    {
        new Product() { ProductID = 1001, Name = "Laptop", Price = 1000 },
        new Product() { ProductID = 1002, Name = "Desktop", Price = 2000 },
        new Product() { ProductID = 1002, Name = "Mobile", Price = 3000 }
    };
}

<table>
    <thead>
        <tr><td>ProductID</td><td>Name</td><td>Price</td></tr>
    </thead>
    @foreach (Product p in productList)
    {
        <tr>
            <td>@p.ProductID</td>
            <td>@p.Name</td>
            <td>@p.Price</td>
        </tr>
    }
</table>
<h5>While  loop</h5>
<h5>While loop</h5>
@{
    var r = 0;
    while (r < 5)
    {
        r += 1;
        <span> @r</span>
    }
}
